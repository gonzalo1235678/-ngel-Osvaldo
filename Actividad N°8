package login_2;
import java.util.Scanner;

/**
 * @author gonza
 *
 */

public class Login_2 {

    public static void main(String[] args) {
           
        Scanner teclado = new Scanner(System.in);
        
                
         String usuario = "Enzo";
         int contraseña = 4321;
         String nuevoUsuario ;
         int nuevaContraseña;
      
         
         System.out.print("Ingrese su usuario :");
         usuario = teclado.next();
                 
         System.out.print("Ingrese su contraseña  :");
          contraseña = teclado.nextInt();
          
          if( usuario.equals(usuario) && contraseña == 4321){
              System.out.println("Bienvenido .." );
              System.out.println(" Puede realizar cambios en su usuario y contraseña ....");
              
               System.out.println(" Ingrese su nuevo usuario :");
               nuevoUsuario = teclado.next();
               
               System.out.println("ingrese su nueva contraseña  :");
               nuevaContraseña = teclado.nextInt();
             
               System.out.print(" Cambios realizados con exitos ..");
        }else
              System.out.println(" Error  en su Usuario o Contraseña...");
         
         
         
    }
    
    
    
    
    
}
